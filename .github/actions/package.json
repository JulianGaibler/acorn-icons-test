{
  "name": "actions",
  "version": "1.0.0",
  "type": "module",
  "description": "A collection of actions for Acorn icons",
  "scripts": {
    "build2": "rollup -c",
    "dev": "rollup -c -w",
    "copy": "copyfiles -u 1 -e \"**/*.ts\" \"src/**/*\" dist",
    "build": "tsup --clean --format cjs src/**/*.ts && npm run copy",
    "lint": "eslint -c .eslintrc.cjs src/",
    "prettier": "prettier -c .prettierrc.cjs --write --check 'src/**/*.*'"
  },
  "license": "MPL-2.0",
  "devDependencies": {
    "chalk": "^5.3.0",
    "fast-glob": "^3.3.2",
    "simple-git": "^3.22.0",
    "svgo": "^3.2.0",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "tslib": "^2.6.2",
    "tsup": "^8.0.1"
  }
}
